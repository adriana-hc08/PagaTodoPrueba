@{
}
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-4">
    <div class="alert alert-danger">
        <h2 class="alert-heading">Error</h2>
        <p>@Model.Message</p>

        @if (Model.ShowRequestId)
        {
            <p><strong>Request ID:</strong> <code>@Model.RequestId</code></p>
        }

        @if (!string.IsNullOrEmpty(Model.StackTrace))
        {
            <div class="mt-3">
                <h6>Detalles técnicos:</h6>
                <pre class="bg-light p-3"><code>@Model.StackTrace</code></pre>
            </div>
        }
    </div>

    <div class="mt-3">
        <a href="@Url.Action("GetAll", "Tarea")" class="btn btn-primary">Volver a la lista</a>
        <a href="javascript:history.back()" class="btn btn-secondary">Regresar</a>
    </div>
</div>